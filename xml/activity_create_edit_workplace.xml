<?xml version="1.0" encoding="utf-8"?>
<!-- Layout fÃ¶r CreateEditWorkplace.java -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CreateEditWorkplaceActivity">

    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_green_dark"
        android:text="Create"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Workplace name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelChargePerHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Charge per hour"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/chargePerHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:hint="E.g. 500.00"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Currency"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:inputType="text"
        android:maxLength="3"
        android:padding="5dp"
        android:text="SEK"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:textSize="20sp" />
</LinearLayout>
